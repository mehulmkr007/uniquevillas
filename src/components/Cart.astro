---
import "./../app.css";
const { price, ratting, name, para } = Astro.props;
---

<!-- cart section -->
<div class="flex flex-col gap-1 max-w-[90%]">
  <div class="relative">
    <img
      src="image/home.jpg"
      alt="#img"
      width="200"
      height="200"
      class="bg-slate-400 h-[200px] rounded-xl"
    />

    <span class="text-xl absolute top-1 left-4">{price}/Month</span>
  </div>

  <div class="flex justify-between w-[80%]">
    <span>{name}</span>
    <span>{ratting}</span>
  </div>

  <div>
    <p>{para}...</p>
  </div>
</div>
